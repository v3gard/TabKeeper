<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="at.haugland.tabkeeper.AboutActivity"
    android:background="#ff2d2d2d">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TabKeeperâ„¢"
        android:id="@+id/about_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal|clip_horizontal"
        android:textSize="50dp"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Christiansand Brygghus Edition"
        android:id="@+id/about_subtitle"
        android:layout_below="@+id/about_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal|clip_horizontal"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_subtitle"
        android:id="@+id/about_llayout_version"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Versjon"
            android:id="@+id/about_versionHeader"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:id="@+id/about_version"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@android:color/white"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/about_llayout_developer"
        android:layout_below="@+id/about_llayout_version">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Utviklet av"
            android:id="@+id/about_developerHeader"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Haugland Foto &amp; IT"
            android:id="@+id/about_developer"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Del denne appen!"
        android:id="@+id/about_shareHeader"
        android:layout_below="@+id/about_llayout_developer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal|clip_horizontal"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/about_shareHeader"
        android:src="@drawable/tabkeeper_qr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
